<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/huise" >
    <LinearLayout
      	
     
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/congshoujixuanzhe"
            android:id="@+id/text_fayueban_xuanzhe"
            android:textColor="@color/lvse"
            android:background="@color/baise"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"/>
         <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paizhao"
            android:id="@+id/text_fayueban_paizhao"
            android:textColor="@color/lvse"
            android:background="@color/baise"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="1dp"/>
         
          <TextView
              android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quxiao"
            android:id="@+id/text_fayueban_quxiao"
            android:textColor="@color/lvse"
            android:background="@color/baise"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"/>
        
    </LinearLayout>

</RelativeLayout>
