<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/transparent_background"
    
    >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/lv_you_guan_li_bei_jing"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lv_you_guan_li"
        android:textColor="@color/lv_you_guan_li"
        android:layout_marginLeft="145dp"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/wan_cheng"
        android:textColor="@color/lv_you_guan_li"
        android:gravity="center"
        android:layout_margin="15dp"
        android:textSize="15sp"
        />
    
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/lv_you_guan_li"
   android:layout_marginTop="11dp"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="11dp"
    android:textSize="15sp"
    android:background="@color/lv_you_guan_li"
    android:text="@string/deng_dai_dui_fang_yan_zheng"
    android:textColor="@color/lv_you_text"
    android:layout_margin="16dp" 
     />
</LinearLayout>
</LinearLayout>
