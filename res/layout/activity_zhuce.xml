<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F1EC"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01B6BD"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:src="@drawable/huitou" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="快速注册"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:text="登录"
            android:id="@+id/zhuce_tiaozhuandenglu"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="11dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >
        <ImageView
            android:layout_marginBottom="2dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="7dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="2dp"
            android:background="@drawable/zhanghao"
            android:src="@drawable/zhanghao1" />
        <TextView
            android:id="@+id/zhuce_zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingTop="7dp"
            android:text="账号"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/zhuce_zhanghao"
            android:background="@null"
            android:id="@+id/zhuce_username"
            android:hint="请输入手机号码注册"
            android:textSize="12sp"
            android:inputType="number"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:textColorHint="#C6C6C6" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <ImageView
           android:layout_marginBottom="2dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="7dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="2dp"
            android:background="@drawable/mima"
            android:src="@drawable/mima1"  />

        <TextView
          android:id="@+id/zhuce_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingTop="7dp"
            android:text="密码"
            android:textSize="15sp"  />

        <EditText
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/zhuce_mima"
            android:background="@null"
            android:hint="请输入登录密码"
            android:textSize="12sp"
            android:password="true"
            android:id="@+id/zhuce_firstpassword"
            android:paddingLeft="15dp"
              android:textColor="#000000"
            android:textColorHint="#C6C6C6" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/zhuce_kongbai"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />

        <EditText
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/zhuce_kongbai"
            android:background="@null"
            android:hint="请确认登录密码"
            android:textSize="12sp"
            android:paddingLeft="15dp"
            android:password="true"
              android:textColor="#000000"
            android:id="@+id/zhuce_secondpassword"
            android:textColorHint="#C6C6C6" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <ImageView
             android:layout_marginBottom="2dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="7dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="2dp"
            android:background="@drawable/yanzheng"
            android:src="@drawable/yanzheng1"  />

        <TextView
          android:id="@+id/zhuce_yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingTop="7dp"
            android:text="验证"
            android:textSize="15sp" />

        <EditText
           android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/zhuce_yanzheng"
            android:background="@null"
            android:hint="请输入你收到的验证码"
            android:textSize="12sp"
            android:paddingLeft="15dp"
              android:textColor="#000000"
            android:id="@+id/zhuce_yanzhengma"
            android:textColorHint="#C6C6C6" />
<Button android:layout_height="18dp"
    android:background="@drawable/juxing"
    android:layout_marginRight="15dp"
    android:layout_marginTop="8dp"
    android:textColor="#15BEBF"
    android:text="获取验证码"
    android:textSize="12sp"
    android:id="@+id/zhuce_huoquyanzhengma"
    android:layout_alignParentRight="true"
    android:layout_width="90dp"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/zhuce"
        android:text="立即注册"
        android:id="@+id/zhuce_zhuce"
        android:textColor="#FFFFFF" />

</LinearLayout>