<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/huise">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lvse">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quxiao"
            android:padding="15dp"
            android:textColor="@color/baise"
            android:textSize="16sp"
            android:id="@+id/fazuji_text_quxiao"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fazuji"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/baise"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fabiao"
            android:textColor="@color/baise"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:id="@+id/fazuji_text_fabiao"/>
    </RelativeLayout>
    <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@color/baise">
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/shuodianshenme"
        android:background="@color/baise"
        android:padding="10dp"
        android:id="@+id/fazuji_edittext"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RelativeLayout 
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/juxing"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
      android:id="@+id/fazuji_relativelayout_tianjiatupian">
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pinglungengduo"
        android:layout_centerInParent="true"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n"
        android:background="@drawable/yuanjiaojuxing"
        android:textColor="@color/baise"
       android:layout_alignParentRight="true"/>
</RelativeLayout>
<ImageView 
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:id="@+id/image_tianjiatupian1"/>
<ImageView 
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
     android:id="@+id/image_tianjiatupian2"/>
<ImageView 
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
     android:id="@+id/image_tianjiatupian3"/>
<ImageView 
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
     android:id="@+id/image_tianjiatupian4"/>
</LinearLayout>
</LinearLayout>
<View android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/huise"
 />
<RelativeLayout
     android:background="@color/baise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/didian"
        android:drawableLeft="@drawable/dingwei"
        android:padding="10dp"
        android:id="@+id/fazuji_text_dingwei"/>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qianjin1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:layout_centerVertical="true"/>
</RelativeLayout>
</LinearLayout>
